#!/usr/bin/env bash

# update and upgrade apt
sudo apt-get -y update
sudo apt-get -y upgrade

# install nginx
sudo apt-get -y install nginx

# creates index file
echo "Hello World from BEDO" | sudo tee /var/www/html/index.nginx-debian.html

# creates config file
sed -i "/server_name _;/ a\\\trewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;" /etc/nginx/sites-available/default

# start server
sudo service nginx start
